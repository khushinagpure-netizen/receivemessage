# ========================================
# WhatsApp Business API v4.0
# Environment Configuration Template
# ========================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to Git - only commit .env.example

# Meta WhatsApp Configuration
# Get these from: developers.facebook.com
ACCESS_TOKEN=your_meta_access_token_here
PHONE_NUMBER_ID=your_phone_number_id_here
WABA_ID=your_waba_id_here
VERIFY_TOKEN=your_verify_token_here

# Supabase PostgreSQL Configuration
# Get these from: supabase.com → Settings → API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_key_here

# Google Gemini AI Configuration
# Get from: ai.google.dev
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
PORT=10000
HOST=0.0.0.0
ENVIRONMENT=development

# Optional: Logging
LOG_LEVEL=INFO
DEBUG=True
